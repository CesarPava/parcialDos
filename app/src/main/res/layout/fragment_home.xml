<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_new_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Student"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="51dp" />
    <TextView
        android:id="@+id/text_name_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="51dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft= "40dp">
        <EditText
            android:id="@+id/name"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:hint="Name"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/text_identification_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identification number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="51dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_identification"
        android:layout_width="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft= "40dp">
        <EditText
            android:id="@+id/identification"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:hint="Identification number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/text_document_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identification number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="51dp" />

    <Spinner
        android:id="@+id/spinner_document_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="235dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#FF0000"
        android:outlineAmbientShadowColor="@color/black" />

    <TextView
        android:id="@+id/text_email_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        android:text="Email"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="51dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_email_student"
        android:layout_width="wrap_content"
        android:layout_marginTop="295dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft= "40dp">
        <EditText
            android:id="@+id/email"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:hint="example@gmail.com"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/text_phone_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="340dp"
        android:text="Phone"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="51dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_phone_student"
        android:layout_width="wrap_content"
        android:layout_marginTop="365dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft= "40dp">
        <EditText
            android:id="@+id/phone"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:hint="Phone number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/text_birth_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="410dp"
        android:text="Birth Day"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="450dp"
        android:text="00/00/0000"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="51dp" />

    <Button
        android:id="@+id/btn_select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="435dp"
        android:text="Pick a date"
        android:background="@color/yellow"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/text_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="490dp"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="51dp" />

    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="515dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#FF0000"
        android:outlineAmbientShadowColor="@color/black"/>

    <TextView
        android:id="@+id/text_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="550dp"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="51dp" />

    <Spinner
        android:id="@+id/spinner_program"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="575dp"
        android:layout_marginRight="40dp" />
    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="610dp"
        android:text="Done"
        android:textColor="@color/white"
        android:background="@color/green"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="200dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:background="@color/red"/>


</RelativeLayout>